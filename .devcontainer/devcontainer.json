{
  "name": "Jekyll GitHub Pages",
  "image": "mcr.microsoft.com/devcontainers/ruby:3.2-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "postCreateCommand": "cd docs && bundle install && cd .. && npm install",
  "forwardPorts": [
    4000
  ],
  "portsAttributes": {
    "4000": {
      "label": "Jekyll Server",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "yzhang.markdown-all-in-one",
        "davidanson.vscode-markdownlint"
      ]
    }
  }
}
